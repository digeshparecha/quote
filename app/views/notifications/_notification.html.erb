<% noti = notification.to_notification%>
<%= turbo_frame_tag dom_id(notification) do %>
  <div class="notification p-2 px-3 d-flex align-items-start bg-light-blue"  data-notification-target="notificationItem">
    <i class="bi bi-info-circle-fill me-3"></i>
    <div class="flex-grow-1">
      <p class="mb-1"><b>New Bid</b></p>
      <p class="text-gray-700 mb-1">
        <b><%= noti.recipient.name %></b> is created new bid.
      </p>
      <p class="mb-1"><%= noti.message %></p>
    </div>
    <div class="d-flex align-items-center">
      <%= link_to noti.url, data: {turbo: false} do %>
        <i class="bi bi-box-arrow-up-right text-primary"></i>
      <% end %>
      <%= button_to notification_path(notification),
                      method: :delete,
                      class: "btn btn-link" do %>
          <i class="bi bi-trash text-danger"></i>
        <% end %>
    </div>
  </div>
<% end %>
